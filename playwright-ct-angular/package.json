{
  "name": "@sand4rt/experimental-ct-angular",
  "version": "1.53.0",
  "description": "Playwright Component Testing for Angular",
  "homepage": "https://playwright.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sand4rt/playwright-ct-angular.git"
  },
  "bugs": {
    "url": "https://github.com/sand4rt/playwright-ct-angular/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "keywords": [
    "testing",
    "angular components",
    "real browser",
    "playwright",
    "unit",
    "integration",
    "functional",
    "end to end",
    "e2e"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./register": {
      "types": "./register.d.ts",
      "default": "./register.mjs"
    },
    "./hooks": {
      "types": "./hooks.d.ts",
      "default": "./hooks.mjs"
    }
  },
  "scripts": {
    "release": "semantic-release"
  },
  "bin": {
    "playwright": "cli.js"
  },
  "dependencies": {
    "@playwright/experimental-ct-core": "1.53.0"
  },
  "devDependencies": {
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "rxjs": "~7.8.1",
    "typescript": "~5.2.0",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/github": "11.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/release-notes-generator": "14.0.3",
    "cz-conventional-changelog": "3.3.0",
    "semantic-release": "24.2.5"
  },
  "peerDependencies": {
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "typescript": ">=5.2.0"
  }
}
